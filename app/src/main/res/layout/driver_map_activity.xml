<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nisnis.batp.logisticbuddy.DriverActivity" />

    <TextView
        android:id="@+id/x_axis"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/y_axis"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/x_axis"/>

    <TextView
        android:id="@+id/z_axis"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/y_axis"/>

    <TextView
        android:id="@+id/driver_start_button"
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        android:background="#2196f3"
        android:text="Start Driving"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="328dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/driver_confirm_shipment_button"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="14sp"
        android:background="#2196f3"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:text="Confirm Arrival"/>

    <TextView
        android:id="@+id/test_success_delivery_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST SUKSES JIIIR"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:textSize="24sp" />

</RelativeLayout>